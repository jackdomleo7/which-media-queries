{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "moduleResolution": "node16",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vite/client", "vitest/globals"]
  }
}
